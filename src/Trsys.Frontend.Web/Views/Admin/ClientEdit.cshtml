@{
    ViewData["Title"] = "シークレットキー編集";
}

<div class="row">
    <h3 class="col mb-1" style="text-overflow:ellipsis">MT4/OANDA Corporation/811631031/2</h3>
    <small class="col-auto">Publisher</small>
</div>
<div class="d-flex justify-content-between">
    <div>山根さん</div>
</div>
<div><span class="badge badge-warning">無効</span></div>

<hr />

<div class="row">
    <h3 class="col">編集</h3>
    <div class="col-auto">
    </div>
</div>

<form>
    <div class="form-group">
        <label for="description">説明</label>
        <input type="email" class="form-control" id="description" aria-describedby="description-help" autocomplete="off">
        <small id="description-help" class="form-text text-muted">シークレットキーの説明を記載します。</small>
    </div>
    <div class="form-group">
        <label>有効化</label>
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="activation">
            <label class="custom-control-label" for="activation"></label>
        </div>
        <small id="description-help" class="form-text text-muted">シークレットキーが使用可能かどうか設定します。</small>
    </div>
    <div class="form-row">
        <div class="col-auto">
            <a asp-action="ClientDetails" asp-route-id="1" class=" btn btn-block btn-outline-secondary">キャンセル</a>
        </div>
        <div class="col-auto">
            <button type="submit" class=" btn btn-block btn-primary">完了</button>
        </div>
    </div>
</form>
